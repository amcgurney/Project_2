<!DOCTYPE html>
<html lang="en">

    <%- include ('./partials/head.ejs', {page: 'Recipe Blog'}) %>

    <%- include ('./partials/nav.ejs') %>

<body>
    <body class="has-navbar-fixed-top">
        <section class="hero is-medium has-background-light">
            <div class="hero-body">
                <p class="title">Recipe Blog</p>
            </div>
        </section>
        <main class="container is-max-widescreen">
            <div class="columns is-multiline p-5">
                <% for(let idx = 0; idx < recipe.length; idx++){ %>
                    <% const recipe = recipe[idx] %>
            <div class="column is-one-third">
                <article class="card">
                    <section class="card-image">
                        <figure class="image is-3by3">
                            <img src="<%= recipe.image %>" alt="Placeholder image" />
                        </figure>
            </div>
            </section>
                            <div class="card-content">
                                <div class="content">
                                    <h3>
                                    <a href="/recipes/<%= recipe.id %>"><%= Name %> </a>
                                    </h3>
                                    <p><%= recipe.description %></p>
                                </div>
                            </div>
                        </article>
                    </div>
                <% } %>
            </div>
        </main>
    </body>
    
</body>
</html>                                                                                     