<!DOCTYPE html>
<html lang="en">

    <%- include ('./partials/head.ejs', {page: 'Recipe Blog'}) %>

    <%- include ('./partials/nav.ejs') %>

<body>
    <body class="has-navbar-fixed-top">
        <section class="hero is-medium has-background-light">
            <div class="hero-body">
                <p class="title">Recipe Blog</p>
            </div>
        </section>
        <main class="container is-max-widescreen">
            <div class="columns is-multiline p-5">
                <% for(let idx = 0; idx < recipes.length; idx++){ %>

                   
            <div class="column is-three-quarters">

                <article class="card">
                    <section class="card-image">
                        <figure class="image is-3by3">                   
                        </figure>
            </div>
            </section>
                            <div class="card-content">
                                <div class="content">
                                    <h3>
                                    </h3>
                                    <p><img src="<%= recipes[idx].image %>"/></p>
                                    <p> <%= recipes[idx].description %> </p>
                                    <p> <%= recipes[idx].title %> </p>
                                    <p> <%= recipes[idx].ingredients %> </p>
                                </div>
                            </div>
                        </article>
                    </div>
                <% } %>
            </div>
        </main>
    </body>
    
</body>
</html>                                                                                     